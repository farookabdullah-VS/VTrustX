# ========================
# VTrustX Server Configuration
# ========================

# --- Required ---
JWT_SECRET=your-secret-key-here-min-32-chars
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_NAME=rayix_db
DB_HOST=localhost
DB_PORT=5432

# --- Optional: OAuth ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# --- Optional: Database Encryption ---
DB_ENCRYPTION_KEY=

# --- Optional: AI Integration ---
GEMINI_API_KEY=

# --- Optional: Server ---
PORT=3000
NODE_ENV=development
LOG_LEVEL=debug
DB_POOL_MAX=20

# --- Optional: Frontend CORS ---
FRONTEND_URL=http://localhost:5173

# --- Optional: Cloud Run ---
# K_SERVICE=vtrust-server
# INSTANCE_CONNECTION_NAME=project:region:instance

# --- Optional: Email ---
# WEBHOOK_SECRET=

# --- Optional: Redis Cache (Production/Multi-Instance) ---
# REDIS_URL=redis://localhost:6379
# Leave empty to use in-memory cache (single instance only)

# --- Optional: Cloud Storage (Production/Cloud Run Required) ---
# GCS_BUCKET_NAME=rayix-uploads
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json (for local dev)
# Leave empty to use local disk storage (development only)

# --- Optional: Error Tracking (Sentry) ---
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_RELEASE=1.0.0

# --- Optional: WhatsApp Distribution (Twilio) ---
# TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
# Note: Credentials are encrypted and stored in integrations table.
# These env vars are used as fallback for testing.
