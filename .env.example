# ===========================================
# VTrustX Environment Variables
# Copy this file to .env and fill in values
# ===========================================

# --- Server ---
NODE_ENV=development
PORT=3000

# --- Database ---
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_db_password
DB_NAME=vtrustx_db
DB_POOL_MAX=20
# DB_SSL=true  # Uncomment for production

# --- Google Cloud SQL (production only) ---
# INSTANCE_CONNECTION_NAME=project:region:instance
# K_SERVICE=vtrustx-service

# --- Security ---
JWT_SECRET=change_me_to_a_random_64_char_string
DB_ENCRYPTION_KEY=change_me_to_a_different_random_64_char_string
CSRF_SECRET=change_me_to_another_random_string
LICENSE_SECRET=change_me_license_secret
WEBHOOK_SECRET=change_me_webhook_secret
STORAGE_KEY=change_me_storage_key

# --- URLs ---
FRONTEND_URL=http://localhost:5173

# --- OAuth (Google) ---
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# --- OAuth (Microsoft) ---
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# --- AI Services ---
AI_SERVICE_URL=http://localhost:3001
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-1.5-flash
GROQ_API_KEY=your_groq_api_key

# --- Email (SMTP) ---
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@yourdomain.com

# --- Logging ---
LOG_LEVEL=info

# --- Client (Vite) ---
# VITE_API_BASE_URL=https://your-production-api.com
